            <Border x:Name="BorderShowBrim"
                    Padding="10 4 10 4">
                <DockPanel LastChildFill="True">
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Right">
                        <xctk:ColorPicker ColorMode="ColorPalette"
                                          ShowStandardColors="False"
