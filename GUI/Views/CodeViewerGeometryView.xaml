            <Border x:Name="BorderShowInsetXF"
                    Padding="10 4 10 4"
                    Visibility="{Binding InsetXFEnable, Converter={StaticResource BooleanToVisibilityConverter}}">
                <DockPanel LastChildFill="True">
                    <StackPanel Orientation="Horizontal"
